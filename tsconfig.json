    "outDir": "./dist/",
    "noImplicitAny": true,
    "sourceMap": true,
    "module": "CommonJS",
    "target": "es5",
    "moduleResolution": "node",
    "allowJs": true,
    "esModuleInterop": true,
    "typeRoots": ["@types"],
    "paths": {
      "@src/*": ["./src/*"]
    }
  }
}
